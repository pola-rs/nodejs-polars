{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noUnsafeDeclarationMerging": "off",
        "noImplicitAnyLet": "off",
        "noThenProperty": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noArguments": "off"
      }
    },
    "includes": ["**", "!**/polars/native-polars.js", "!docs/**/*", "!bin/**/*"]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "includes": ["**", "!**/polars/native-polars.js", "!docs/**/*", "!bin/**/*"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
